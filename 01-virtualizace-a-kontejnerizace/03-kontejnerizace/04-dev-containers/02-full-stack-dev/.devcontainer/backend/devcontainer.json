{
	"name": "Backend (Python)",
	
	// Cesta k docker-compose je nyní o dvě úrovně výš (z pohledu tohoto souboru)
	"dockerComposeFile": [
		"../../docker-compose.yml"
	],
	
	// Připojíme se do služby 'backend'
	"service": "backend",
	
	// DŮLEŽITÉ: Říkáme VS Code, že kořen pracovního prostoru je ve složce backend.
	// I když je namapovaný celý projekt do /workspace, editor se otevře rovnou v /workspace/backend.
	"workspaceFolder": "/workspace/backend",

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"njpwerner.autodocstring"
			]
		}
	},

	"postCreateCommand": "pip install -r requirements.txt",
	"remoteUser": "root"
}